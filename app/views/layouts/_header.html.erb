<header class="navbar navbar-fixed-top navbar-dark">
  <div class="container">
    <%= link_to "Simple Flights", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav">
        <li>
          <%= link_to "https://github.com/ellielle/flight-booker" do %>
            <%= octicon "mark-github" %>
          <% end %>
        </li>
      </ul>
      <div class="search-form">
        <ul class="nav navbar-nav navbar-right">
          <%= form_with url: search_path, local: true, method: :post do |f| %>
            <%= f.text_field :search_booking, class: "form-inline", placeholder: "Search Flight by Email..." %>
            <%= f.submit "Search", class: "btn btn-primary" %>
          <% end %>
        </ul>
      </div>
    </nav>
  </div>
</header>