<div class="booking-form">
  <%= form_with scope: :flight, url: bookings_path, local: true, method: :post do |f| %>
    <div class="form-row flight-info">
      <div class="form-group col-md-3">
        <%= f.label :flight_number %>
        <%= f.text_field :flight_id, class: "form-control", disabled: true,
                         value: flight.id %>
      </div>
      <div class="form-group col-md-3">
        <%= f.label :departing %>
        <%= f.text_field :departing, class: "form-control", disabled: true,
                         value: flight.from_airport.name %>
      </div>
      <div class="form-group col-md-3">
        <%= f.label :arriving %>
        <%= f.text_field :arriving, class: "form-control", disabled: true,
                         value: flight.to_airport.name %>
      </div>
      <div class="form-group col-md-3">
        <%= f.label :time %>
        <%= f.text_field :time, class: "form-control", disabled: true,
                         value: format_date_time(flight.departure) %>
      </div>
    </div>
    <% unless @passengers.nil? || @passengers.blank? %>
      <% @passengers.to_i.times do |passenger| %>
        <%= fields_for :passenger do |field| %>
        <div class="form-row">
          <div class="passenger-info">
            <%= "Passenger #{passenger.to_i + 1}" %>
          </div>
          <div class="form-group">
            <div class="col-md-4 field-col">
              <%= field.label :first_name %>
              <%= field.text_field :first_name, class: "form-control" %>
            </div>
            <div class="col-md-4 field-col">
              <%= field.label :last_name %>
              <%= field.text_field :last_name, class: "form-control" %>
            </div>
            <div class="col field-col" id="email-col">
              <%= field.label :email %>
              <%= field.email_field :email, class: "form-control" %>
            </div>
          </div>
        </div>
        <% end %>
      <% end %>
    <% end %>
    <%= f.submit "Submit Information", class: "btn btn-primary btn-passenger" %>
    <%= f.submit "Change Details", class: "btn btn-primary" %>
  <% end %>
</div>

