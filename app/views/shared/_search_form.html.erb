<div class="search-form row row-no-gutters">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for :flight, url: flights_path, method: :get do |f| %>
      <div class="form-group">
        <%= f.label "Flights from", class: 'col-md-12' %>
        <%= f.collection_select :from_airport, @airports, :code, :name, prompt: "",
                    class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label "Flights to", class: 'col-md-12' %>
        <%= f.collection_select :to_airport, @airports, :code, :name, prompt: "",
                     class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label "Number of Passengers", class: 'col-md-12' %>
        <%= f.select :passengers, options_for_select(1..4), prompt: "",
                     class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label "Departing date & time", class: 'col-md-12' %>
        <%= f.select :departure, options_for_select(@flight_dates),
                     prompt: "", class: 'form-control' %>
      </div>
        <%= f.submit "Search Flights", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>